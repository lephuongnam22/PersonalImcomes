<Window x:Class="PersonalIncomeStatement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalIncomeStatement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="400" Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Main window" Grid.Row="0" />
        <StackPanel Grid.Row="1">
            <Button Content="Add income" Click="Button_Click"></Button>
            <Button Content="Add payment"></Button>
            <Button Content="Payment detail"></Button>
        </StackPanel>
    </Grid>
</Window>
